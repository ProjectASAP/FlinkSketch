<Configuration status="WARN">
    <Appenders>
        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout pattern="%d{HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n" />
        </Console>
    </Appenders>
    <Loggers>
        <Root level="WARN">
            <AppenderRef ref="Console" />
        </Root>
        <!-- FlinkSketch package - verbose logging for examples -->
        <Logger name="dev.projectasap.flinksketch" level="DEBUG" additivity="false">
            <AppenderRef ref="Console" />
        </Logger>
        <!-- Reduce Flink logging noise -->
        <Logger name="org.apache.flink" level="ERROR" additivity="false">
            <AppenderRef ref="Console" />
        </Logger>
    </Loggers>
</Configuration>
